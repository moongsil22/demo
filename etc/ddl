CREATE TABLE t_user
(
    user_id      VARCHAR2(20)	NOT NULL,
    user_name    VARCHAR2(10)	NOT NULL,
    user_pw      VARCHAR2(100)	NOT NULL,
    juminno      VARCHAR2(13)	NOT NULL,
    regi_id      VARCHAR2(20)	NOT NULL,
    regi_date    DATE	        NOT NULL,
    modify_id    VARCHAR2(20)	NOT NULL,
